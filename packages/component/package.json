{
  "name": "@remix-run/component",
  "version": "0.0.0",
  "description": "Remix components for building user interfaces in the browser",
  "author": "Ryan Florence <rpflorence@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remix-run/remix.git",
    "directory": "packages/component"
  },
  "homepage": "https://github.com/remix-run/remix/tree/main/packages/component#readme",
  "files": [
    "LICENSE",
    "README.md",
    "dist",
    "src"
  ],
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./jsx-runtime": "./src/jsx-runtime.ts",
    "./jsx-dev-runtime": "./src/jsx-dev-runtime.ts",
    "./server": "./src/server.ts"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./jsx-runtime": {
        "types": "./dist/jsx-runtime.d.ts",
        "default": "./dist/jsx-runtime.js"
      },
      "./jsx-dev-runtime": {
        "types": "./dist/jsx-dev-runtime.d.ts",
        "default": "./dist/jsx-dev-runtime.js"
      },
      "./server": {
        "types": "./dist/server.d.ts",
        "default": "./dist/server.js"
      }
    }
  },
  "dependencies": {
    "@remix-run/interaction": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "@vitest/browser": "^3.2.4",
    "playwright": "^1.53.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "test:install:browsers": "playwright install chromium",
    "prepublishOnly": "pnpm build"
  }
}
